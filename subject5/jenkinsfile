pipeline {
    agent any

    triggers {
        pollSCM('H/3 * * * *')
    }

    environment {
        DOCKERHUB = credentials('docker-hub')
    }

    stages {

        stage('Prepare') {
            steps {
                git url: 'https://github.com/CSID-DGU/2025-2-OSSPrac-TongTongTongSahur_02.git',
                    branch: 'main',
                    credentialsId: 'github'
            }
        }

        stage('Build Image') {
            steps {
                dir('subject5') {
                    sh "docker build -t ${DOCKERHUB_USR}/app-app:latest ."
                }
            }
        }

        stage('Tag Image') {
            steps {
                sh "docker tag ${DOCKERHUB_USR}/app-app:latest ${DOCKERHUB_USR}/app-app:${BUILD_NUMBER}"
            }
        }

        stage('Push Image') {
            steps {
                sh """
                    echo ${DOCKERHUB_PSW} | docker login -u ${DOCKERHUB_USR} --password-stdin
                    docker push ${DOCKERHUB_USR}/app-app:latest
                    docker push ${DOCKERHUB_USR}/app-app:${BUILD_NUMBER}
                """
            }
        }
    }
}
